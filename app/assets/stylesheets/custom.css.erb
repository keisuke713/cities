@import 'bootstrap-sprockets';
@import 'bootstrap';

.header {
  background-color: #000000;
  display: flex;
  justify-content: space-between;
  height: 150px;
}

.title {
  font-size: 25px;
  color: #ffffff;
  height: 100%;
}

.link {
  width: 200px;
  text-align: center;
}

.main {
  text-align: center;
  background-image: url("<%= asset_path("tokyo.jpg") %>");
  background-size: cover;
  height: 550px;
}

.main h1 {
  font-size: 55px;
}

.main .intro {
  font-size: 55px;
}

.btn {
  position: relative;
  display: inline-block;
  font-weight: bold;
  padding: 0.25em 0.5em;
  text-decoration: none;
  color: #ffffff;
  background: #66ccff;
  border-radius: 15px 15px 15px 15px;
  transition: .4s;
}

ul {
  list-style: none;
}
