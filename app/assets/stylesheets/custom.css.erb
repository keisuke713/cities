@import 'bootstrap-sprockets';
@import 'bootstrap';

.header {
  background-color: #000000;
  display: flex;
  justify-content: space-between;
  height: 150px;
}

.container {
  margin: 0 100px 100px 100px;
  text-align: center;
}

.row {
  padding: 0 340px;
}

.container h1 {
  font-size: 50px;
}

.title {
  font-size: 25px;
  color: #ffffff;
  height: 100%;
}

.link {
  width: 400px;
  text-align: center;
}

.main {
  text-align: center;
  background-image: url("<%= asset_path("tokyo.jpg") %>");
  background-size: cover;
  height: 550px;
}

.main h1 {
  font-size: 55px;
}

.main .intro {
  font-size: 55px;
}

.btn {
  position: relative;
  display: inline-block;
  font-weight: bold;
  padding: 0.25em 0.5em;
  text-decoration: none;
  color: #ffffff;
  background: #66ccff;
  border-radius: 15px 15px 15px 15px;
  transition: .4s;
}

ul {
  list-style: none;
}

.form {
  padding: 10px;
}

.index {
  padding: 0 340px 0 340px;
}

.user {
  margin: 0 auto;
  height: 100px;
  width: 500px;
  padding: 0.5em 1em;
  margin: 2em 0;
  font-weight: bold;
  background: #FFF;
  border: solid 3px #6091d3;
  border-radius: 10px;
}

.profile {
  text-align: left;
}

.image {
  display: inline-block;
  text-align: left;
  height: 200px;
  width: 200px;
}

.name {
  display: inline-block;
  text-align: left;
  height: 200px;
  width: 400px;
}

.break {
  word-wrap: break-word;
  white-space: normal;
}

.posts {
  padding: 0px 340px;
}

.post {
  margin: 0 auto;
  height: 150px;
  width: 500px;
  padding: 0.5em 1em;
  margin: 2em 0;
  font-weight: bold;
  background: #FFF;
  border: solid 3px #6091d3;
  border-radius: 10px;
}

.post-content {
  display: inline-block;
  vertical-align: top;
  padding: 5px 10px;
}

.content {
  margin: 0 auto;
  height: 350px;
  width: 500px;
  padding: 0.5em 1em;
  margin: 2em 0;
  font-weight: bold;
  background: #FFF;
  border: solid 3px #6091d3;
  border-radius: 10px;
  padding: 15px 10px;
}

.contact {
  display: inline-block;
  margin: 10px;
}

.comment {
  height: 190px;
  width: 500px;
  padding: 0.5em 1em;
  margin: 2em 0;
  font-weight: bold;
  background: #FFF;
  border: solid 3px #6091d3;
  border-radius: 10px;
}
